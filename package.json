{
  "name": "voce",
  "version": "1.0.2",
  "description": "API test runner",
  "main": "dist/index.js",
  "bin": {
    "voce": "cli.js"
  },
  "files": [
    "dist",
    "cli.js"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --fix --ext .ts",
    "test": "cross-env DEBUG=voce ava -c 1 test/**/*.spec.ts",
    "coverage": "nyc npm test",
    "postcoverage": "nyc report --reporter=json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marvin-j97/voce.git"
  },
  "keywords": [
    "api tester",
    "test suite"
  ],
  "author": "marvin-j97",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marvin-j97/voce/issues"
  },
  "homepage": "https://github.com/marvin-j97/voce#readme",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/glob": "^7.1.3",
    "@types/node": "^16.3.2",
    "@types/sinon": "^10.0.0",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "ava": "^3.15.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "sinon": "9",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "debug": "^4.2.0",
    "glob": "^7.1.6",
    "haxan": "0.6.0",
    "ora": "^5.4.0",
    "yargs": "^17.0.1",
    "zod": "^3.11.6"
  }
}
